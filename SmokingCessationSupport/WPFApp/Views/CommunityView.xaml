<Window
    x:Class="WPFApp.Views.CommunityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="clr-namespace:WPFApp.Converters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Cộng đồng"
    Width="900"
    Height="700"
    Background="#F5F7FA"
    FontFamily="Segoe UI">

    <Window.Resources>
        <convert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <convert:MyCommentToVisibilityConverter x:Key="MyCommentToVisibilityConverter" />

        <!--  Post Card Style  -->
        <Style x:Key="PostCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="Margin" Value="0,0,0,20" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.1"
                        ShadowDepth="2" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Comment Item Style  -->
        <Style x:Key="CommentItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA" />
            <Setter Property="Margin" Value="10,8,10,0" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="BorderBrush" Value="#EEEEEE" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!--  Button Styles  -->
        <Style
            x:Key="PrimaryButton"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="Button">
            <Setter Property="Background" Value="#2ecc40" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style
            x:Key="SecondaryButton"
            BasedOn="{StaticResource MaterialDesignOutlinedButton}"
            TargetType="Button">
            <Setter Property="BorderBrush" Value="#2ecc40" />
            <Setter Property="Foreground" Value="#2ecc40" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="Margin" Value="5,0,0,0" />
        </Style>

        <!--  TextBox Style  -->
        <Style x:Key="CommentTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid
            Grid.Row="0"
            Margin="0,0,0,20"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <materialDesign:PackIcon
                Grid.Column="0"
                Width="28"
                Height="28"
                Foreground="#2ecc40"
                Kind="AccountGroup" />
            <TextBlock
                Grid.Column="1"
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Foreground="#333"
                Text="Cộng đồng" />
            <Button
                Grid.Column="2"
                Padding="10,4"
                HorizontalAlignment="Right"
                Background="#2ecc40"
                BorderThickness="0"
                Click="BackToDashboard_Click"
                Content="← Quay về Dashboard"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="White" />
        </Grid>

        <!--  New Post Section  -->
        <Border
            Grid.Row="1"
            Margin="0,0,0,25"
            Padding="0"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
                <TextBox
                    x:Name="NewPostTextBox"
                    MinHeight="100"
                    Margin="15,15,15,0"
                    materialDesign:HintAssist.Hint="Bạn đang nghĩ gì?"
                    Style="{StaticResource CommentTextBoxStyle}"
                    Text="{Binding NewPostContent, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Margin="0,0,15,15"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Command="{Binding CreatePostCommand}"
                        Content="Đăng bài"
                        Style="{StaticResource PrimaryButton}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!--  Posts List  -->
        <ScrollViewer
            Grid.Row="2"
            Padding="0,0,5,0"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding CommunityPosts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource PostCardStyle}">
                            <StackPanel>
                                <!--  Post Header (User Info)  -->
                                <StackPanel
                                    Margin="15,15,15,10"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Ellipse
                                        Width="40"
                                        Height="40"
                                        Fill="#E0E0E0">
                                        <Ellipse.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{materialDesign:PackIcon Kind=AccountCircle}" />
                                        </Ellipse.OpacityMask>
                                    </Ellipse>
                                    <StackPanel Margin="10,0,0,0">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding AuthorName}" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="#888"
                                            Text="{Binding CreatedAt, StringFormat={}{0:HH:mm dd/MM}}" />
                                    </StackPanel>
                                    <Button
                                        Width="28"
                                        Height="28"
                                        Margin="8,0,0,0"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="PostMenuButton_Click"
                                        Content="⋮"
                                        Style="{x:Null}"
                                        Visibility="{Binding IsMyPost, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Command="{Binding DeletePostCommand}" Header="Xóa bài viết" />
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </StackPanel>

                                <!--  Post Content  -->
                                <TextBlock
                                    Margin="15,0,15,15"
                                    Text="{Binding Content}"
                                    TextWrapping="Wrap" />

                                <!--  Comment Input Area  -->
                                <StackPanel Margin="15,0,15,15" Background="#F9F9F9">
                                    <TextBox
                                        materialDesign:HintAssist.Hint="Viết bình luận..."
                                        Style="{StaticResource CommentTextBoxStyle}"
                                        Text="{Binding NewCommentContent, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        HorizontalAlignment="Right"
                                        Command="{Binding AddCommentCommand}"
                                        Content="Bình luận"
                                        Style="{StaticResource SecondaryButton}" />
                                </StackPanel>

                                <!--  Comments Section  -->
                                <ItemsControl Margin="0,0,0,10" ItemsSource="{Binding Comments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource CommentItemStyle}">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse
                                                            Width="24"
                                                            Height="24"
                                                            Fill="#E0E0E0">
                                                            <Ellipse.OpacityMask>
                                                                <VisualBrush Stretch="Fill" Visual="{materialDesign:PackIcon Kind=AccountCircle}" />
                                                            </Ellipse.OpacityMask>
                                                        </Ellipse>
                                                        <TextBlock
                                                            Margin="8,0,0,0"
                                                            FontWeight="SemiBold"
                                                            Text="{Binding AuthorName}" />
                                                        <Button
                                                            Width="20"
                                                            Height="20"
                                                            Margin="8,0,0,0"
                                                            Padding="0"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Click="CommentMenuButton_Click"
                                                            CommandParameter="{Binding}"
                                                            Content="⋮"
                                                            Style="{x:Null}"
                                                            Tag="{Binding}"
                                                            Visibility="{Binding UserId, Converter={StaticResource MyCommentToVisibilityConverter}}">
                                                            <Button.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem
                                                                        Command="{Binding DeleteCommentCommand}"
                                                                        CommandParameter="{Binding}"
                                                                        Header="Xóa bình luận" />
                                                                </ContextMenu>
                                                            </Button.ContextMenu>
                                                        </Button>
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,5,0,0"
                                                        Text="{Binding Content}"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Margin="0,5,0,0"
                                                        FontSize="10"
                                                        Foreground="#999"
                                                        Text="{Binding CreatedAt, StringFormat={}{0:HH:mm dd/MM}}" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>