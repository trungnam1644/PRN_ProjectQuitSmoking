<Window
    x:Class="WPFApp.Views.CoachDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:WPFApp.Converters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Coach Dashboard"
    Width="1200"
    Height="800"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  Converters  -->
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <conv:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter" />

        <!--  Styles  -->
        <Style x:Key="PatientCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="5"
                        ShadowDepth="2"
                        Color="#10000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PatientMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD" />
            <Setter Property="CornerRadius" Value="10 10 10 0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,5" />
        </Style>

        <Style x:Key="CoachMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#2ecc40" />
            <Setter Property="CornerRadius" Value="10 10 0 10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style x:Key="EmptyStateTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#757575" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Patients List Column  -->
        <Border
            Grid.Column="0"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Trong phần Header của cột chat  -->
                <Border
                    Grid.Row="0"
                    Padding="10"
                    Background="#FAFAFA"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Logout Button - Đã chuyển về bên trái  -->
                        <Button
                            Grid.Column="0"
                            Width="122"
                            Margin="0,4,10,4"
                            HorizontalAlignment="Left"
                            Click="Button_Click"
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    Kind="Logout" Foreground="#2ecc40"/>
                                <TextBlock Text="Đăng xuất" Foreground="#2ecc40"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
                <!--  Patients List  -->
                <ScrollViewer Grid.Row="1">
                    <ItemsControl Margin="5" ItemsSource="{Binding Patients}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource PatientCardStyle}">
                                    <Button
                                        Padding="0"
                                        Command="{Binding DataContext.SelectPatientCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignFlatButton}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Patient Avatar  -->
                                            <Ellipse
                                                Width="50"
                                                Height="50"
                                                Fill="#E0E0E0">
                                                <Ellipse.OpacityMask>
                                                    <VisualBrush Stretch="Fill">
                                                        <VisualBrush.Visual>
                                                            <materialDesign:PackIcon
                                                                Width="50"
                                                                Height="50"
                                                                Kind="Account" />
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Ellipse.OpacityMask>
                                            </Ellipse>

                                            <!--  Patient Info  -->
                                            <StackPanel Grid.Column="1" Margin="10,0">
                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Text="{Binding FullName}"
                                                    TextTrimming="CharacterEllipsis" Foreground="#2ecc40"/>
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#757575"
                                                    Text="{Binding LastMessageTime, StringFormat='HH:mm dd/MM'}" />
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#2ecc40"
                                                    Text="{Binding UnreadCount, StringFormat='{}{0} tin nhắn mới'}"
                                                    Visibility="{Binding UnreadCount, Converter={StaticResource ZeroToVisibilityConverter}}" />
                                            </StackPanel>

                                            <!--  Navigation Icon  -->
                                            <materialDesign:PackIcon
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Kind="ChevronRight" Foreground="#2ecc40"/>
                                        </Grid>
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!--  Status Bar  -->
                <Border
                    Grid.Row="2"
                    Padding="10"
                    Background="#FAFAFA"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                    <TextBlock
                        FontSize="12"
                        Foreground="#757575"
                        Text="{Binding Patients.Count, StringFormat='Tổng: {0} bệnh nhân'}" />
                </Border>
            </Grid>
        </Border>

        <!--  Chat Column  -->
        <Grid Grid.Column="1">
            <!--  Chat Panel (visible when patient selected)  -->
            <Grid Visibility="{Binding IsPatientSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Chat Header  -->
                <Border
                    Grid.Row="0"
                    Padding="10"
                    Background="#FAFAFA"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Margin="0,0,10,0"
                            Fill="#E0E0E0">
                            <Ellipse.OpacityMask>
                                <VisualBrush Stretch="Fill">
                                    <VisualBrush.Visual>
                                        <materialDesign:PackIcon
                                            Width="40"
                                            Height="40"
                                            Kind="Account" />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Ellipse.OpacityMask>
                        </Ellipse>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{Binding SelectedPatient.FullName}" />
                    </StackPanel>
                </Border>

                <!--  Messages  -->
                <ScrollViewer
                    Grid.Row="1"
                    Padding="15"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <!--  Patient Message  -->
                                    <Border
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource PatientMessageStyle}"
                                        Visibility="{Binding IsIncomingMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="#757575"
                                                Text="{Binding TimeDisplay}" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Coach Message  -->
                                    <Border Style="{StaticResource CoachMessageStyle}" Visibility="{Binding IsIncomingMessage, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock
                                                Foreground="White"
                                                Text="{Binding Content}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="#BBDEFB"
                                                Text="{Binding TimeDisplay}" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!--  Message Input  -->
                <Border
                    Grid.Row="2"
                    Padding="10"
                    Background="#FAFAFA"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            VerticalContentAlignment="Center"
                            materialDesign:HintAssist.Hint="Nhập tin nhắn..."
                            Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}" />

                        <Button
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Command="{Binding SendCommand}"
                            Style="{StaticResource MaterialDesignIconButton}">
                            <materialDesign:PackIcon Foreground="#2ecc40" Kind="Send" />
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!--  Empty State (visible when no patient selected)  -->
            <Border Background="#FAFAFA" Visibility="{Binding IsPatientSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon
                        Width="64"
                        Height="64"
                        Margin="0,0,0,20"
                        Foreground="#BDBDBD"
                        Kind="MessageQuestion" />
                    <TextBlock Style="{StaticResource EmptyStateTextStyle}" Text="Chọn bệnh nhân từ danh sách bên trái để bắt đầu trò chuyện" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>