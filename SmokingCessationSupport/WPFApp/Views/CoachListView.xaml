<Window
    x:Class="WPFApp.Views.CoachListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="KẾT NỐI VỚI HUẤN LUYỆN VIÊN"
    Width="380"
    Height="550"
    FontFamily="Segoe UI"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header đơn giản  -->
        <Border
            Grid.Row="0"
            Padding="15"
            Background="#2ecc40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="BackToDashboardButton"
                    Margin="0,0,16,0"
                    Padding="10,4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="#2ecc40"
                    BorderThickness="0"
                    Click="BackToDashboard_Click"
                    Content="←"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="KẾT NỐI VỚI HUẤN LUYỆN VIÊN"
                    TextAlignment="Center" />
            </Grid>
        </Border>

        <!--  Danh sách Coach  -->
        <ScrollViewer Grid.Row="1" Padding="15">
            <ItemsControl ItemsSource="{Binding Coaches}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,8"
                            Padding="15"
                            Background="{DynamicResource MaterialDesignCardBackground}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Thông tin Coach  -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="14"
                                        Foreground="#555555"
                                        Text="{Binding Specialization}" />
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="#777777"
                                        Text="{Binding ExperienceYears, StringFormat='Kinh nghiệm: {0} năm'}" />
                                </StackPanel>

                                <!--  Icon chọn là Button  -->
                                <Button
                                    Grid.Column="1"
                                    Command="{Binding DataContext.SelectCoachCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource MaterialDesignFlatButton}">
                                    <materialDesign:PackIcon
                                        VerticalAlignment="Center"
                                        Foreground="#2ecc40"
                                        Kind="ChevronRight" />
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>