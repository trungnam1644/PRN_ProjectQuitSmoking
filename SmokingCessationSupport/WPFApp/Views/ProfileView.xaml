<Window
    x:Class="WPFApp.Views.ProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Hồ sơ cá nhân"
    Width="900"
    Height="600"
    FontFamily="Segoe UI"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="materialDesign:HintAssist.Hint" Value="Nhập thông tin" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="SaveButton"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="Button">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Background" Value="#2ecc40" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style
            x:Key="CancelButton"
            BasedOn="{StaticResource MaterialDesignOutlinedButton}"
            TargetType="Button">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="BorderBrush" Value="#2ecc40" />
            <Setter Property="Foreground" Value="#2ecc40" />
        </Style>

        <Style
            x:Key="BackButton"
            BasedOn="{StaticResource MaterialDesignOutlinedButton}"
            TargetType="Button">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="Foreground" Value="#2ecc40" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <materialDesign:PackIcon
                Width="32"
                Height="32"
                Margin="0,0,10,0"
                Foreground="#2ecc40"
                Kind="AccountCircle" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="HỒ SƠ CÁ NHÂN" />
        </StackPanel>

        <!--  Profile Content  -->
        <materialDesign:Card Grid.Row="1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Profile Form  -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Thông tin cá nhân" />

                    <!--  Full Name  -->
                    <TextBox
                        materialDesign:HintAssist.Hint="Họ và tên"
                        materialDesign:HintAssist.IsFloating="True"
                        Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                                <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#2ecc40" />
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!--  Email  -->
                    <TextBox
                        materialDesign:HintAssist.Hint="Email"
                        materialDesign:HintAssist.IsFloating="True"
                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                                <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#BDBDBD" />
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!--  Date of Birth  -->
                    <DatePicker
                        materialDesign:HintAssist.Hint="Ngày sinh"
                        materialDesign:HintAssist.IsFloating="True"
                        SelectedDate="{Binding DateOfBirth}">
                        <DatePicker.Style>
                            <Style BasedOn="{StaticResource {x:Type DatePicker}}" TargetType="DatePicker">
                                <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#2ecc40" />
                            </Style>
                        </DatePicker.Style>
                    </DatePicker>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!--  Action Buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <!--  Nút back  -->
            <Button
                Grid.Column="0"
                Click="BackButton_Click"
                Style="{StaticResource BackButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="ArrowLeft" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="Quay lại" />
                </StackPanel>
            </Button>

            <Button Command="{Binding CancelCommand}" Style="{StaticResource CancelButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="20"
                        Margin="0,0,5,0"
                        Kind="Close" />
                    <TextBlock Text="Hủy bỏ" />
                </StackPanel>
            </Button>

            <Button Command="{Binding SaveCommand}" Style="{StaticResource SaveButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="20"
                        Margin="0,0,5,0"
                        Kind="ContentSave" />
                    <TextBlock Text="Lưu thay đổi" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>