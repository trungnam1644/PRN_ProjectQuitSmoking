<Window
    x:Class="WPFApp.Views.SmokingStatusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFApp.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NHẬT KÝ HÚT THUỐC"
    Width="800"
    Height="600"
    FontFamily="Segoe UI"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        ShadowDepth="2"
                        Color="#10000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2ecc40" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <Style x:Key="InputLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,5,0,2" />
        </Style>

        <Style
            x:Key="PrimaryButton"
            BasedOn="{StaticResource MaterialDesignRaisedButton}"
            TargetType="Button">
            <Setter Property="Background" Value="#2ecc40" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style
            x:Key="SecondaryButton"
            BasedOn="{StaticResource MaterialDesignOutlinedButton}"
            TargetType="Button">
            <Setter Property="BorderBrush" Value="#2ecc40" />
            <Setter Property="Foreground" Value="#2ecc40" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="AlternationCount" Value="2" />
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="HeadersVisibility" Value="Column" />
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2ecc40" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,5" />
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F7FA" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Width" Value="200" />
        </Style>

        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2ecc40" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,0,0" />
        </Style>
    </Window.Resources>

    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header với nút quay lại  -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="#E3F2FD">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Nút quay về Dashboard  -->
                <Button
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    HorizontalAlignment="Left"
                    Click="GoToDashboardButton_Click"
                    Command="{Binding BackToDashboardCommand}"
                    Style="{StaticResource SecondaryButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Kind="ArrowLeft" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="Dashboard" />
                    </StackPanel>
                </Button>

                <!--  Tiêu đề chính  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        Foreground="#2ecc40"
                        Kind="NotebookEdit" />
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#2ecc40"
                        Text="NHẬT KÝ HÚT THUỐC" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="10"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Input Section  -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderTextStyle}" Text="NHẬP THÔNG TIN" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Date Input  -->
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,10,0">
                                <TextBlock Style="{StaticResource InputLabelStyle}" Text="Ngày ghi nhận" />
                                <DatePicker
                                    materialDesign:HintAssist.Hint="Chọn ngày"
                                    SelectedDate="{Binding RecordDate}"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                            </StackPanel>

                            <!--  Cigarettes Input  -->
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5,0">
                                <TextBlock Style="{StaticResource InputLabelStyle}" Text="Số điếu/ngày" />
                                <TextBox
                                    materialDesign:HintAssist.Hint="Nhập số điếu"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding CigarettesPerDay}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="10,0,0,0">
                                <TextBlock Style="{StaticResource InputLabelStyle}" Text="Tình trạng sức khỏe" />
                                <TextBox
                                    materialDesign:HintAssist.Hint="Nhập tình trạng (vd: Mệt mỏi, Khó thở...)"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Text="{Binding HealthStatus}" />
                            </StackPanel>

                
                        </Grid>

                        <StackPanel
                            Margin="0,15,0,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Command="{Binding SaveCommand}"
                                Content="LƯU THÔNG TIN"
                                Style="{StaticResource PrimaryButton}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
              
                <!--  History Section  -->
                <Border Margin="0,10,0,0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!--  Thay thế StackPanel lỗi bằng Grid  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource HeaderTextStyle}"
                                Text="LỊCH SỬ GHI NHẬN" />
                        </Grid>

                        <DataGrid ItemsSource="{Binding HistoryRecords}" Style="{StaticResource DataGridStyle}">
                            <DataGrid.ColumnHeaderStyle>
                                <Style BasedOn="{StaticResource DataGridColumnHeaderStyle}" TargetType="DataGridColumnHeader" />
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding RecordDate, StringFormat={}{0:dd/MM/yyyy}}"
                                    Header="Ngày" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding CigarettesPerDay}"
                                    Header="Số điếu/ngày" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding HealthStatus}"
                                    Header="Tình trạng sức khỏe" /> 
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>