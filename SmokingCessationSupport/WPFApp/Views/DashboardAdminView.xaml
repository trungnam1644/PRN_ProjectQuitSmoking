<Window
    x:Class="WPFApp.Views.DashboardAdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Admin Dashboard"
    Width="1200"
    Height="800"
    Background="White"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  Modern Card Style  -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="15"
                        ShadowDepth="3"
                        Color="#10000000" />
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="15" />
            <Setter Property="Padding" Value="20" />
        </Style>

        <!--  Function Button Style  -->
        <Style x:Key="ModernFunctionButton" TargetType="Button">
            <Setter Property="Width" Value="280" />
            <Setter Property="Height" Value="180" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#212121" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <Border
                                    x:Name="hoverOverlay"
                                    Background="#10000000"
                                    CornerRadius="8"
                                    Opacity="0" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="hoverOverlay" Property="Opacity" Value="1" />
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="20"
                                            ShadowDepth="5"
                                            Color="#20000000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!--  Main Content - Horizontal Buttons  -->
        <ScrollViewer
            Margin="0,60,0,60"
            Padding="30"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Disabled">
            <UniformGrid HorizontalAlignment="Center" Rows="1">
                <!--  Account Management  -->
                <Button Click="ShowAccountManagement_Click" Style="{StaticResource ModernFunctionButton}">
                    <StackPanel>
                        <materialDesign:PackIcon
                            Width="48"
                            Height="48"
                            Foreground="#2ecc40"
                            Kind="AccountGroup" />
                        <TextBlock Margin="0,15,0,0" Text="Quản lý tài khoản" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="Normal"
                            Foreground="#757575"
                            Text="Xem và quản lý người dùng" />
                    </StackPanel>
                </Button>

                <!--  Logout Button  -->
                <Button
                    x:Name="LogoutButton"
                    Click="LogoutButton_Click"
                    Style="{StaticResource ModernFunctionButton}">
                    <StackPanel>
                        <materialDesign:PackIcon
                            Width="48"
                            Height="48"
                            Foreground="#F44336"
                            Kind="Logout" />
                        <TextBlock Margin="0,15,0,0" Text="Đăng xuất" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="Normal"
                            Foreground="#757575"
                            Text="Thoát khỏi hệ thống" />
                    </StackPanel>
                </Button>
            </UniformGrid>
        </ScrollViewer>

        <!--  Popup Container  -->
        <Grid
            x:Name="PopupContainer"
            Background="#80000000"
            Visibility="Collapsed">
            <Border
                x:Name="PopupContent"
                Width="1000"
                Height="700"
                Padding="0"
                Background="White"
                CornerRadius="8"
                Effect="{StaticResource MaterialDesignShadowDepth4}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Popup Header  -->
                    <Border
                        Padding="15"
                        Background="#2ecc40"
                        CornerRadius="8,8,0,0">
                        <Grid>
                            <TextBlock
                                x:Name="PopupTitle"
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="White" />
                            <Button
                                HorizontalAlignment="Right"
                                Click="ClosePopup_Click"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignIconButton}">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Kind="Close" />
                            </Button>
                        </Grid>
                    </Border>

                    <!--  Dynamic Content  -->
                    <ContentControl x:Name="PopupBody" Grid.Row="1" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>